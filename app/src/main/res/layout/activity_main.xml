<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lot_chinh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<RelativeLayout
    android:onClick="doianh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgBaiDang2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/imgBaiDang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

        <RelativeLayout
                android:layout_width="match_parent" 
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:paddingLeft="100dp"
                >

                <TextView
                    android:id="@+id/folow"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    android:text="Fllowing"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/FM"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    android:text="For Me"
                    android:textColor="#ffffff"

                    android:textSize="20sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:onClick="moTrangCaNhan"
                        android:id="@+id/imgAnhProfile"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/dongnhi"
                        android:layout_marginTop="300dp"
                        />
                    />

                    <ImageView
                        android:id="@+id/plus1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/imgAnhProfile"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="-20dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/plus"
                        app:tint="#FFFFFF"/>

                    <ImageView
                        android:id="@+id/imgTimBaiDang"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@id/plus1"
                        android:layout_alignParentRight="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/hearts"
                        app:tint="#FFFFFF"/>


                    <TextView
                        android:id="@+id/txvTimBaiDang"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/imgTimBaiDang"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="1000"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/txvIconBinhLuanBaiDang"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@id/txvTimBaiDang"
                        android:layout_alignParentRight="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/comment"
                        app:tint="#FFFFFF" />

                    <TextView
                        android:id="@+id/txvBinhLuanBaiDang"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/txvIconBinhLuanBaiDang"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="1000"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imgIconChiaSe"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@id/txvBinhLuanBaiDang"
                        android:layout_alignParentRight="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/share"
                        app:tint="#FFFFFF" />

                    <TextView
                        android:id="@+id/txvLuotChiaSe"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/imgIconChiaSe"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="500"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="400dp"
                        >

                <TextView

                        android:id="@+id/txvTenNguoiDang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mạnh Cường\n"
                        android:layout_centerVertical="true"
                        android:textColor="#ffffff"
                        android:textSize="20sp"

                        />
                    <TextView
                        android:id="@+id/txvNoiDungBaiDang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txvTenNguoiDang"
                        android:text="Trăng lên trăng khuyết trăng tà\n Anh còn ngồi đấy em thì đợi ai "
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        />

        </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_alignParentBottom="true"
                        android:background="#000"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/home"
                            android:padding="6dp"
                            android:layout_width="1dp"
                            android:layout_weight="1"
                            android:layout_height="60dp"
                            android:src="@drawable/home"
                            app:tint="#FFFFFF" />
                        <ImageView
                            android:id="@+id/search"
                            android:padding="6dp"
                            android:layout_width="1dp"
                            android:layout_weight="1"
                            android:layout_height="60dp"
                            android:src="@drawable/search"
                            app:tint="#FFFFFF" />
                        <ImageView
                            android:id="@+id/more"
                            android:padding="6dp"
                            android:layout_width="1dp"
                            android:layout_weight="1"
                            android:layout_height="60dp"
                            android:src="@drawable/more"
                            app:tint="#FFFFFF" />
                        <ImageView
                            android:id="@+id/mail"
                            android:padding="6dp"
                            android:layout_width="1dp"
                            android:layout_weight="1"
                            android:layout_height="60dp"
                            android:src="@drawable/mail"
                            app:tint="#FFFFFF" />
                        <ImageView
                            android:id="@+id/userr"
                            android:padding="6dp"
                            android:layout_width="1dp"
                            android:layout_weight="1"
                            android:layout_height="60dp"
                            android:src="@drawable/userr"
                            app:tint="#FFFFFF" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lot_phai"
        android:layout_gravity="right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-64dp"
        >
        <include layout="@layout/info_tiktok" />
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
